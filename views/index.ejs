<% include ./partials/header %> 

      <main class="bg">

        <div class="container">

          <div class="row">
            
            <% for (let i = 0; i < movies.length; i++) { %>
              
                <div class="col-xs-12 col-md-6 col-lg-4">
                  <div class="box">
                    <div class="box1">
                      <h3 class="movieTitles"><a href="/movie/<%= movies[i].title %>"><%= movies[i].title %></a></h3>
                    </div>
                    <div class="box2">
                      <a href="/movie/<%= movies[i].title %>">
                      <img src="https://image.tmdb.org/t/p/w500/<%= movies[i].backdrop_path %>" class="boxImg">
                      </a>
                    </div>
                    <div class="box3">
                      <p class="plot"><%= movies[i].overview %></p><br/>
                    </div>
                  </div>   
                </div>
            
            <% }; %> 

          </div>
        </div>
      </main>
    </body>
</html>
